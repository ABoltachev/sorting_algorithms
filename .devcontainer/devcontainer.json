{
	"name": "dev-env",

	"context": "..",

	"dockerFile": "../Dockerfile",

	"settings": { 
		"terminal.integrated.shell.linux": "bash"
	},

	"extensions": [
		"twxs.cmake",
		"ms-vscode.cmake-tools",
		"ms-vscode.cpptools",
		"xaver.clang-format"
	],
	"runArgs": [ "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined" ],
}
